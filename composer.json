{
    "name": "geoplans/core",
    "description": "Aplicación MVC nativa para la gestión y scraping de planes de ocio.",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Hugo Sabater",
            "role": "Developer",
            "email": "hugocullera83@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "guzzlehttp/guzzle": "^7.8",
        "symfony/dom-crawler": "^5.4",
        "symfony/css-selector": "^5.4",
        "monolog/monolog": "^2.9",
        "vlucas/phpdotenv": "^5.6",
        "psr/log": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "doctrine/instantiator": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "GeoPlans\\": "src/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}